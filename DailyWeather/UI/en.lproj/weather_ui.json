{
   "type": "stack",
   "id": "weather_container",
   "stackAxis": "vertical",
   "stackAlignment": "center",
   "style": {
       "padding": 20,
       "backgroundColor": "#FFFFFF"
   },
   "children": [
       {
           "type": "image",
           "id": "weather_icon",
           "content": "cloud.sun.fill",
           "style": {
               "width": 100,
               "height": 100,
               "foregroundColor": "#007AFF"
           }
       },
       {
           "type": "text",
           "id": "temperature",
           "content": "24°C",
           "style": {
               "fontSize": 48,
               "fontWeight": 700
           }
       },
       {
           "type": "text",
           "id": "description",
           "content": "맑음",
           "style": {
               "fontSize": 24,
               "foregroundColor": "#666666"
           }
       },
       {
           "type": "stack",
           "id": "details_container",
           "stackAxis": "horizontal",
           "stackAlignment": "center",
           "children": [
               {
                   "type": "text",
                   "id": "humidity",
                   "content": "습도: 60%",
                   "style": {
                       "fontSize": 16,
                       "foregroundColor": "#666666"
                   }
               },
               {
                   "type": "text",
                   "id": "wind",
                   "content": "풍속: 5m/s",
                   "style": {
                       "fontSize": 16,
                       "foregroundColor": "#666666"
                   }
               }
           ]
       },
       {
           "type": "button",
           "id": "navigate_button",
           "content": "상세 정보 보기",
           "style": {
               "fontSize": 20,
               "backgroundColor": "#007AFF",
               "foregroundColor": "#FFFFFF",
               "padding": 10,
               "cornerRadius": 8
           },
           "action": {
               "type": "navigate",
               "payload": {
                   "screen": "DetailView"
               }
           }
       }
   ]
}
